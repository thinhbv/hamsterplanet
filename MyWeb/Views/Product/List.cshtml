@using Libs.Utils
@model MyWeb.Models.ProductsModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <!-- breadcrumb-banner-area -->
    <div class="breadcrumb-banner-area ptb-120 gray-bg-1">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-text text-center">
                        @if (Model.group != null)
                        {
                            <h2>@Model.group.Name</h2>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-banner-area-end -->
    if (Model.products != null)
    {
        <!-- blog-right-area-start -->
        <div class="blog-area pt-120 pb-90">
            <div class="container">
                <div class="row">
                    @Html.Partial("../Partial/_ProductBox", Model.products)
                </div>
            </div>
        </div>
        <!-- blog-right-area-start -->
    }

}