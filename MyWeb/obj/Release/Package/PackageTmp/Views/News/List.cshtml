@using Libs.Utils
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area ptb-120 bg-opacity" style="background-image:url(@StringClass.OriginalImage(Model.news[0].Image))">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@Model.group.Name</h2>
                    <p>@Model.group.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- blog-right-area-start -->
<div class="blog-area pt-120 pb-90">
    <div class="container">
        <div class="row">
            @foreach (MyWeb.Entities.News item in Model.news)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="blog-wrapper mb-30">
                        <div class="blog-img">
                            <a href="@StringClass.GeneralDetailUrl(Consts.TIN_TUC, item.GroupName, item.Id.ToString(), item.Name)"><img src="@StringClass.OriginalImage(item.Image)" alt="@item.Name" /></a>
                        </div>
                        <div class="blog-text">
                            <div class="blog-info">
                                <h3><a href="@StringClass.GeneralDetailUrl(Consts.TIN_TUC, item.GroupName, item.Id.ToString(), item.Name)">@item.Name</a></h3>
                                <p>@StringClass.FormatContentNews(item.Content, 150)</p>
                            </div>
                            <div class="blog-date">
                                <span><i class="fa fa-clock-o"></i>@item.Date.Value.ToString("dd/MM/yyyy") </span>
                                <span><i class="fa fa-heart"></i>20 lượt thích</span>
                                <span><i class="fa fa-comment"></i>0 bình luận</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- blog-right-area-start -->
