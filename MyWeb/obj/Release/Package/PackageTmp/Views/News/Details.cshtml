@using Libs.Utils
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area ptb-120 bg-opacity" style="background-image:url(@StringClass.OriginalImage(Model.news.Image))">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@Model.news.Name</h2>
                    <p>@Model.news.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- project-details-3-start -->
<div class="project-details-3 pt-40 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="project-text">
                    <strong>@Model.news.Content</strong>
                    @Html.Raw(Model.news.Detail)
                </div>
            </div>
        </div>
    </div>
</div>
<!-- project-details-3-end -->
<!-- recent-work-area-start -->
<div class="recent-work-area pb-120">
    <div class="container">
        <div class="section-info text-center mb-60">
            <h2>Tin liên quan</h2>
        </div>
        <div class="row">
            <div class="works-active owl-carousel">
                @foreach (var item in Model.newsReleate)
                {
                    <div class="col-md-12">
                        <div class="work-wrapper">
                            <div class="work-img">
                                <a href="@StringClass.GeneralDetailUrl(Consts.DICH_VU, item.GroupName, item.Id.ToString(), item.Name)"><img src="@StringClass.ThumbImage(item.Image)" alt="@item.Name" class="img-resize" /></a>

                            </div>
                            <div class="related-post-title">
                                <h3><a href="@StringClass.GeneralDetailUrl(Consts.DICH_VU, item.GroupName, item.Id.ToString(), item.Name)" title="@item.Name">@item.Name</a></h3>
                                <span>@StringClass.FormatContentNews(item.Content, 150)</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- recent-work-area-end -->
