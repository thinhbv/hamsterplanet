@using Libs.Utils
@model IEnumerable<MyWeb.Entities.Page>
<div class="header-bottom-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="menu-area">
                    <div class="main-menu-area">
                        <nav class="main-navigation navbar-expand-xl">
                            <div class="box-header">
                                <button class="close-box" type="button"><i class="ti-close"></i></button>
                            </div>
                            <div class="navbar-collapse" id="navbarContent">
                                <div class="megamenu-content">
                                    <a href="#main-collapse" class="browse-cat" data-toggle="collapse">
                                        <i class="ti-menu"></i>
                                    </a>
                                    <div class="mainwrap collapse" id="main-collapse">
                                        <ul class="main-menu">
                                            @foreach (var item in Model.Where(r => r.Level.Length == 5).ToList())
                                            {
                                                var subMenu = Model.Where(r => r.Level.Length == 10 && r.Level.Substring(0, 5) == item.Level);
                                                if (subMenu.Count() > 0)
                                                {
                                                    <li class="menu-link parant">
                                                        <a class="link-title" href="@item.Link" title="@item.Name">
                                                            <span>@item.Name</span>
                                                            <i class="fa fa-angle-down"></i>
                                                        </a>
                                                        <a data-toggle="collapse" href="#collapse-@item.Id" class="link-title link-title-lg" title="@item.Name">
                                                            <span>@item.Name</span>
                                                            <i class="fa fa-angle-down"></i>
                                                        </a>
                                                        <ul class="dropdown-submenu collapse sub-menu" id="collapse-@item.Id">
                                                            @foreach (var sub in subMenu)
                                                            {
                                                                <li class="submenu-li parant">
                                                                    <a href="@sub.Link" class="sublink-title" title="@sub.Name">@sub.Name</a>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="menu-link parant">
                                                        <a class="link-title" href="@item.Link" title="@item.Name">
                                                            <span>@item.Name</span>
                                                        </a>
                                                        <a href="@item.Link" class="link-title link-title-lg" title="@item.Name">
                                                            <span>@item.Name</span>
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                        <script>
                                                    $('.megamenu-li').parent('ul').addClass('mega-menu');
                                                    $('.menu-banner').parent('ul').addClass('banner-menu');
                                                    $('.submenu-li').parent('ul').addClass('sub-menu');
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>