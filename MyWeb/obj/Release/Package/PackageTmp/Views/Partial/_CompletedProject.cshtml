@using Libs.Utils
@if (Model.Count > 0)
{
    {
        string className = "";
        int i = 0;
        foreach (MyWeb.Models.ImagesModel item in Model)
        {
            if (i % 2 == 0)
            {
                className = "color:#fd6600";
            }
            else
            {
                className = "color:#00b050;";
            }
        <!-- recent-work-area-start -->
        <div class="recent-work-area ptb-120 gray-bg">
            <div class="container">
                <div class="section-title mb-60 text-center">
                    <h2><span style="@className">@item.group.Name</span></h2>
                </div>
                <div class="row">
                    <div class="works-active owl-carousel">
                        @foreach (MyWeb.Entities.Images image in item.images)
                        {
                            <div class="col-md-12">
                                <div class="work-wrapper">
                                    <div class="work-img">
                                        <a href="#"><img src="@StringClass.OriginalImage(image.Image)" alt="" /></a>
                                        <div class="work-text">
                                            <h3><a href="#">@image.Thumbnail</a></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- recent-work-area-end -->
            i++;
        }
    }
}
