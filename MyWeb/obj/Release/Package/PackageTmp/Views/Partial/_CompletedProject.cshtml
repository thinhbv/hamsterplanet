@using Libs.Utils
@if (Model.Count > 0)
{
    <!-- recent-work-area-start -->
    <div class="recent-work-area ptb-120 gray-bg ">
        <div class="container">
            <div class="section-title mb-60 text-center" style="background-image:url(assets/img/logo/section.png)">
                <h4>Hình ảnh</h4>
                <h2>Hình ảnh tiêu biểu</h2>
            </div>
            <div class="row">
                <div class="works-active owl-carousel">
                    @foreach (MyWeb.Entities.Images item in Model)
                    {
                        <div class="col-md-12">
                            <div class="work-wrapper">
                                <div class="work-img">
                                    <a href="#"><img src="@StringClass.OriginalImage(item.Image)" alt="" /></a>
                                    <div class="work-text">
                                        <h3><a href="#">@item.Thumbnail</a></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- recent-work-area-end -->
}
