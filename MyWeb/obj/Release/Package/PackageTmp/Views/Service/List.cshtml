@using Libs.Utils
@model MyWeb.Models.ServiceListModel
@{
    
}
<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area ptb-120 bg-opacity" style="background-image:url(@StringClass.OriginalImage(Model.servicesModel.group.Image))">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@Model.servicesModel.group.Name</h2>
                    <p>@Model.servicesModel.group.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- blog-right-area-start -->
<div class="blog-area pt-120 pb-90">
    <div class="container">
        <div class="row">
            @foreach (MyWeb.Entities.Product item in Model.servicesModel.products)
            {
                <div class="col-md-6 mb-30">
                    <article class="blog-post mb-40">
                        <div class="blog-thumb">
                            <a href="@StringClass.GeneralDetailUrl(Consts.DICH_VU, item.GroupName, item.Id.ToString(), item.Name)">
                                <img src="@StringClass.OriginalImage(item.Image1)" alt="@item.Name" title="@item.Name">
                                @*<div class="blog-icon">
                                        <span class="pe-7s-pin"></span>
                                    </div>*@
                            </a>
                        </div>
                        <div class="blog-content">
                            <h2 class="post-title"><a href="@StringClass.GeneralDetailUrl(Consts.DICH_VU, item.GroupName, item.Id.ToString(), item.Name)">@item.Name</a></h2>
                            @*<div class="blog-meta">
                                    <span>February 13.</span>
                                    <span><a href="#">Momen Bhuiyan.</a></span>
                                    <span>4 Comments</span>
                                </div>*@
                            <p>@StringClass.FormatContentNews(item.Content, 150)</p>
                            @*<div class="read-more">
                                <a href="@StringClass.GeneralDetailUrl(Consts.DICH_VU, item.GroupName, item.Id.ToString(), item.Name)">Chi tiết</a>
                            </div>*@
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</div>
<!-- blog-right-area-start -->
